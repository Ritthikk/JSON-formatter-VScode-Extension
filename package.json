{
  "name": "easy-json-formatter",
  "displayName": "JSON Formatter and Comparison",
  "description": "Simple JSON formatter and comparison tool",
  "version": "1.0.1",
  "publisher": "RithikSrivastava",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "json-tools-sidebar",
          "title": "JSON Tools",
          "icon": "$(json)"
        }
      ]
    },
    "views": {
      "json-tools-sidebar": [
        {
          "id": "json-tools-list",
          "name": "Available Tools",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "jsontools.openFormatter",
        "title": "Open JSON Formatter",
        "icon": "$(json)"
      },
      {
        "command": "jsontools.openComparison",
        "title": "Compare JSON",
        "icon": "$(diff)"
      }
    ]
  },
  "activationEvents": [
    "onView:json-tools-list"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ritthikk/JSON-formatter-VScode-Extension"
  },
  "keywords": ["json", "formatter", "beautify", "json formatter", "compare", "diff", "diff-checker", "diffchecker", "comparison", "beyond compare"],
  "icon": "media/icon.png"
}